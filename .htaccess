# ARCHIVO: .htaccess
RewriteEngine On

# Optimización de imágenes - Version compatible con producción
# Si se accede a una imagen con parámetros, redirigir a optimize.php
RewriteCond %{QUERY_STRING} .+
RewriteRule ^uploads/([^/]+\.(jpg|jpeg|png|gif))$ optimize.php?img=$1 [QSA,L]

# Servir imágenes normales sin parámetros directamente
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^uploads/([^/]+\.(jpg|jpeg|png|gif))$ uploads/$1 [L]

# Headers de cache para imágenes estáticas
<FilesMatch "\.(jpg|jpeg|png|gif|webp|avif)$">
    Header set Cache-Control "public, max-age=31536000"
    Header set ETag "%{FILE_ETAG}e"
</FilesMatch> 