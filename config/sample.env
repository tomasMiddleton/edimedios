# CONFIGURACIÓN DE EDI MEDIOS
# Copia este archivo como .env y personaliza los valores

# === CONFIGURACIÓN BÁSICA ===
APP_NAME="EDI Medios"
APP_VERSION="2.0.0"
APP_ENVIRONMENT="development"  # development, staging, production

# === CONFIGURACIÓN DE DIRECTORIOS ===
STORAGE_PATH="./storage"
CACHE_PATH="./cache"
LOGS_PATH="./logs"
TEMP_PATH="./temp"

# === CONFIGURACIÓN DE OPTIMIZACIÓN ===
DEFAULT_QUALITY=85
MAX_WIDTH=1920
MAX_HEIGHT=1080
WEBP_ENABLED=true
AVIF_ENABLED=false

# === CONFIGURACIÓN DE SEGURIDAD ===
CORS_ENABLED=true
CORS_ORIGINS="https://medios.void.cl,https://www.medios.void.cl,http://localhost:3000"
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# === CONFIGURACIÓN DE UPLOADS ===
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS="jpg,jpeg,png,gif,webp,avif"
BLOCK_EXECUTABLE_CONTENT=true

# === CONFIGURACIÓN DE LOGGING ===
LOG_LEVEL="info"  # debug, info, warning, error
LOG_SECURITY_EVENTS=true
LOG_PERFORMANCE=true
LOG_ROTATION_DAYS=30

# === CONFIGURACIÓN DE CACHE ===
CACHE_ENABLED=true
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE_MB=1000

# === CONFIGURACIÓN DE ESTADÍSTICAS ===
STATS_ENABLED=true
STATS_RETENTION_DAYS=90
STATS_TRACK_IPS=false  # Por privacidad

# === CONFIGURACIÓN DE MANTENIMIENTO ===
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistema en mantenimiento. Regresamos pronto."
ADMIN_EMAIL="admin@medios.void.cl"

# === CONFIGURACIÓN DE CDN (Opcional) ===
CDN_ENABLED=false
CDN_URL=""
CDN_API_KEY=""

# === CONFIGURACIÓN DE BACKUP (Opcional) ===
BACKUP_ENABLED=false
BACKUP_SCHEDULE="daily"  # hourly, daily, weekly
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=""
BACKUP_S3_REGION=""
BACKUP_S3_ACCESS_KEY=""
BACKUP_S3_SECRET_KEY="" 