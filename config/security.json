{
    "cors": {
        "enabled": true,
        "allowed_origins": [
            "https://medios.void.cl",
            "https://www.medios.void.cl",
            "http://localhost:3000",
            "http://localhost:8080"
        ],
        "allowed_methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "OPTIONS"
        ],
        "allowed_headers": [
            "Origin",
            "X-Requested-With", 
            "Content-Type",
            "Accept",
            "Authorization",
            "Cache-Control"
        ],
        "allow_credentials": false,
        "max_age": 3600
    },
    "rate_limiting": {
        "enabled": true,
        "requests_per_minute": 60,
        "requests_per_hour": 1000,
        "blocked_duration_minutes": 15
    },
    "file_upload": {
        "max_file_size_mb": 100,
        "allowed_extensions": [
            "jpg", "jpeg", "png", "gif", "webp", "avif"
        ],
        "allowed_mime_types": [
            "image/jpeg",
            "image/png", 
            "image/gif",
            "image/webp",
            "image/avif"
        ],
        "scan_for_viruses": false,
        "block_executable_content": true
    },
    "api_security": {
        "require_https": false,
        "api_key_required": false,
        "ip_whitelist": [],
        "ip_blacklist": [],
        "log_all_requests": true,
        "block_user_agents": [
            "bot",
            "crawler",
            "scraper"
        ]
    },
    "content_security": {
        "add_watermark": false,
        "watermark_text": "© EDI Medios",
        "watermark_opacity": 50,
        "prevent_hotlinking": false,
        "referrer_whitelist": []
    },
    "logging": {
        "log_level": "info",
        "log_security_events": true,
        "log_cors_violations": true,
        "log_rate_limit_hits": true,
        "rotate_logs_days": 30
    },
    "emergency": {
        "maintenance_mode": false,
        "maintenance_message": "Sistema en mantenimiento. Intente más tarde.",
        "emergency_contacts": [
            "admin@medios.void.cl"
        ]
    },
    "version": "1.0.0",
    "last_updated": "2025-01-02T12:00:00Z",
    "updated_by": "system"
} 